                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Column="0" Text="AB 223" FontFamily="Ubuntu" FontSize="20" Padding="20,17,0,0" />
                                    <TextBlock Grid.Column="1" Text="London (LHR)" FontFamily="Ubuntu" FontSize="20" Padding="0,17,0,0" />
                                    <TextBlock Grid.Column="2" Text="10:30" FontFamily="Ubuntu" FontSize="20" Padding="0,17,0,0" />
                                    <TextBlock Grid.Column="3" Text="On Time" FontFamily="Ubuntu" FontSize="20" Padding="0,17,0,0" />
                                    <TextBlock Grid.Column="4" Text="A3" FontFamily="Ubuntu" FontSize="20" Padding="0,17,0,0" />
                                    <TextBlock Grid.Column="5" Text="2" FontFamily="Ubuntu" FontSize="20" Padding="0,17,0,0" />

                                </Grid>
                            </Border>

                            <Border Height="55" BorderThickness="0,0,0,1" BorderBrush="Black">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.95*"/>
                                        <ColumnDefinition Width="1.2*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="0.9*"/>
                                        <ColumnDefinition Width="0.7*"/>
                                        <ColumnDefinition Width="0.65*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>

                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Column="0" Text="AB 223" FontFamily="Ubuntu" FontSize="20" Padding="20,17,0,0" />
                                    <TextBlock Grid.Column="1" Text="London (LHR)" FontFamily="Ubuntu" FontSize="20" Padding="0,17,0,0" />
